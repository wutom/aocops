import os,sys
import statvfs
from datetime import datetime

##OPS 自定义grains 项目


## DISK DIR= '/', '/opt'
def disk_dir():
    disk_size = {}
    disk_dir = ('/', '/opt')
    for i in disk_dir:
        vfs = os.statvfs(i)
        vfs_all = vfs[statvfs.F_BLOCKS]*vfs[statvfs.F_BSIZE]/(1024*1024*1024)
        disk_size[i] = vfs_all
    return disk_size
