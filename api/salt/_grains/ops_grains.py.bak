import os,sys
from datetime import datetime

##OPS 自定义grains 项目
## CPU MEM DISK

def memory_stat():
    mem = {}
    fm = open("/proc/meminfo")
    lines = fm.readlines()
    fm.close()
    for line in lines:
        name = line.split(':')[0]
        var = line.split(':')[1].split()[0]
        mem[name] = long(var) / 1024
    return mem

mem_info = memory_stat()
def base_info():
    grians = {}
    grains['mem_total'] = mem_info['MemTotal']
    grains['mem_free'] = mem_info['MemFree']
    return grains
